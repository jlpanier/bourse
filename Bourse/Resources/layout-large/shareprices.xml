<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Switch
            android:id="@+id/swCac40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/CAC40"
            style="@style/Text.Label"/>
        <RadioGroup
    	    android:id="@+id/radiogroupOrder"
		    android:orientation="horizontal"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >
		    <RadioButton 
			    android:id="@+id/radioCode"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:text="@string/Code" 
                style="@style/Text.Label"/>
		    <RadioButton 
			    android:id="@+id/radioName"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:text="@string/Name" 
                style="@style/Text.Label"/>
		    <RadioButton 
			    android:id="@+id/radioRisk"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:text="@string/Risk" 
                style="@style/Text.Label"/>
		    <RadioButton 
			    android:id="@+id/radioConsensus"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:text="@string/Consensus"
                style="@style/Text.Label"/>
		    <RadioButton 
			    android:id="@+id/radioRendement"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:text="@string/Rendement"
                style="@style/Text.Label"/>
		</RadioGroup>
    </LinearLayout>
	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
		android:layout_weight="1">
		<ListView
			android:id="@+id/lvSharePrices"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_weight="1"
			style="@style/ListView"/>

		<ImageView
			android:id="@+id/btnLoadShares"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:src="@drawable/telechargement_cloud"
			android:background="@drawable/shape_oval_64"
			style="@style/ImageView.FloatingButton"/>

	</RelativeLayout>
	<ProgressBar
		android:id="@+id/pbLoading"
		style="?android:progressBarStyleHorizontal"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="center"
		android:layout_marginLeft="@dimen/MarginM"
		android:layout_marginRight="@dimen/MarginM"
		android:indeterminate="false"
		android:visibility="gone"
		/>
</LinearLayout>