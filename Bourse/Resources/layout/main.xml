<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include 
        android:id="@+id/idshares" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone" 
        layout="@layout/shares" />

    <include 
        android:id="@+id/idshareprices" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone" 
        layout="@layout/shareprices" />

    <include 
        android:id="@+id/idblueooth" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone" 
        layout="@layout/bluetooth" />

    <include 
        android:id="@+id/idvisuel" 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="visible" 
        layout="@layout/visuel" />

    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/MarginM">
        <LinearLayout 
            android:id="@+id/btnShare" 
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">
            <ToggleButton
                android:id="@+id/tbShare" 
                android:background="@drawable/banque"
                style="@style/Button.Menu"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/btnSharePrice" 
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">
            <ToggleButton
                android:id="@+id/tbSharePrices" 
                android:background="@drawable/statistiques"
                style="@style/Button.Menu"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/btnBluetooth" 
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">
            <ToggleButton
                android:id="@+id/tbBluetooth" 
                android:background="@drawable/bluetooth"
                style="@style/Button.Menu"/>
        </LinearLayout>
        <LinearLayout 
            android:id="@+id/btnVisuel" 
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center">
            <ToggleButton
                android:id="@+id/tbVisuel" 
                android:background="@drawable/regle_triangle"
                style="@style/Button.Menu"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
