                android:layout_height="wrap_content"
                android:layout_weight="1"
		        android:src="@drawable/appicon"
                style="@style/Image"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bluetooth connected"
                style="@style/Text.Label"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
		        android:src="@drawable/bluetooth_connected"
                style="@style/Image"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Bluetooth connecting"
                style="@style/Text.Label"/>

            <ImageView
                android:id="@+id/bluetooth_connecting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
		        android:src="@drawable/bluetooth_connecting"
                style="@style/Image"/>

