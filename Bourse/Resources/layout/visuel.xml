                android:layout_height="wrap_content"
                android:layout_weight="1"
		        android:src="@drawable/bluetooth_disconnected"
                style="@style/Image"/>

	        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="application"
                style="@style/Text.Label"/>
        
